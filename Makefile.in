#---[ Library configuration ]------------------------------------------------------------

LIBNAME=libhllapi
SONAME=@SONAME@
PRODUCT_NAME=@PRODUCT_NAME@
GETTEXT_PACKAGE=@GETTEXT_PACKAGE@

SOURCES= \
	$(wildcard src/core/*.cc) \
	$(wildcard src/core/@OSNAME@/*.rc) \
	$(wildcard src/core/@OSNAME@/*.cc)

TEST_SOURCES= \
	$(wildcard src/testprogram/*.cc)

INSTALL_PACKAGES=@INSTALL_PACKAGES@ locale

#---[ Tools ]----------------------------------------------------------------------------

CXX=@CXX@
LD=@CXX@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
XGETTEXT=@XGETTEXT@
MSGCAT=@MSGCAT@
WINDRES=@WINDRES@
AR=@AR@
VALGRIND=@VALGRIND@
GENMARSHAL=@GENMARSHAL@
ZIP=@ZIP@
DOXYGEN=@DOXYGEN@
DLLTOOL=@DLLTOOL@
STRIP=@STRIP@

#---[ Paths ]----------------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
sysconfdir=@sysconfdir@

BASEDIR=@BASEDIR@

POTDIR=$(BASEDIR)/.pot

OBJDIR=$(BASEDIR)/.obj/$(LIBNAME)
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR=$(BASEDIR)/.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Rules ]----------------------------------------------------------------------------

DEPENDS= \
	Makefile \
	src/include/*.h \
	src/include/lib3270/*.h


CFLAGS= \
	@CFLAGS@ \
	-g \
	-Isrc/include \
	-DBUILD_DATE=`date +%Y%m%d` \
	@IPC3270_CFLAGS@

LDFLAGS=@LDFLAGS@

LIBS= \
	@LIBS@ \
	@IPC3270_LIBS@

$(POTDIR)/$(LIBNAME)/%.pot: \
	%.cc

	@echo $(notdir $@) ...
	@$(MKDIR) $(@D)
	@$(XGETTEXT) \
		--language=C \
		--keyword=_ \
		--keyword=N_ \
		--keyword=MSG_:2 \
		--output=$@ \
		$<
	@touch $@

$(POTDIR)/$(LIBNAME)/%.pot: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@touch $@

#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(dir $@)

	@$(CXX) \
		$(CFLAGS) \
		-DDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-g -Wall -Wextra -fstack-check \
		-DDEBUG=1 \
		-o $@ \
		-c $<

$(OBJDBG)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(dir $@)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(dir $@)

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-o $@ \
		-c $<

$(OBJRLS)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(dir $@)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/$(SONAME)

Release: \
	$(BINRLS)/$(SONAME)

$(BINRLS)/$(SONAME): \
	$(foreach SRC, $(basename $(SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(dir $@)
	@echo $< ...
	@$(LD) \
		$(LDFLAGS) \
		-Wl,-soname,$(@F) \
		-o $@ \
		$^ \
		$(LIBS)

$(POTDIR)/$(LIBNAME).pot: \
	$(foreach SRC, $(basename $(SOURCES)), $(POTDIR)/$(LIBNAME)/$(SRC).pot)

	@rm -f $@
	@$(MKDIR) $(@D)
	@$(MSGCAT) --sort-output $^ > $@

locale: \
	locale/$(GETTEXT_PACKAGE).pot

	@$(MAKE) -C locale all

locale/$(GETTEXT_PACKAGE).pot: \
	$(POTDIR)/$(LIBNAME).pot

	@rm -f $@
	@$(MKDIR) $(@D)
	@$(MSGCAT) --sort-output $^ > $@

#---[ Install Targets ]------------------------------------------------------------------

install: \
	$(foreach PKG, $(INSTALL_PACKAGES), install-$(PKG))


install-linux-lib: \
	$(BINRLS)/$(SONAME)

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(SONAME) \
		$(DESTDIR)$(libdir)/$(LIBNAME)@DLLEXT@.@PACKAGE_MAJOR_VERSION@.@PACKAGE_MINOR_VERSION@
		
	@$(LN_S) \
		$(LIBNAME)@DLLEXT@.@PACKAGE_MAJOR_VERSION@.@PACKAGE_MINOR_VERSION@ \
		$(DESTDIR)$(libdir)/$(LIBNAME)@DLLEXT@

	@$(MKDIR) $(DESTDIR)$(datarootdir)/appdata
	@$(INSTALL_DATA) \
		metainfo.xml \
		$(DESTDIR)$(datarootdir)/appdata/$(PRODUCT_NAME)-hllapi.metainfo.xml

install-dev:

	# Install devel
	@$(MKDIR) $(DESTDIR)$(includedir)/lib3270
	@$(INSTALL_DATA) \
		src/include/lib3270/*.h \
		$(DESTDIR)$(includedir)/lib3270

	# Install PKG-CONFIG files
	@$(MKDIR) $(DESTDIR)$(libdir)/pkgconfig
	@$(INSTALL_DATA) \
		sdk/hllapi.pc \
		$(DESTDIR)$(libdir)/pkgconfig/hllapi.pc

install-windows-lib: \
	$(BINRLS)/$(SONAME)

	@$(MKDIR) \
		$(DESTDIR)$(bindir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(SONAME) \
		$(DESTDIR)$(bindir)/$(LIBNAME)@DLLEXT@

	@$(STRIP) \
		--discard-all \
		$(DESTDIR)$(bindir)/$(LIBNAME)@DLLEXT@
		
	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(DLLTOOL) \
		--input-def $(BINRLS)/$(LIBNAME).def \
		--dllname $(LIBNAME).dll \
		--output-lib $(DESTDIR)$(libdir)/$(LIBNAME).dll.a

	@$(MKDIR) \
		$(DESTDIR)$(datarootdir)/$(PRODUCT_NAME)/def

	@$(INSTALL_DATA) \
		$(BINRLS)/$(LIBNAME).def \
		$(DESTDIR)$(datarootdir)/$(PRODUCT_NAME)/def

install-locale: \
	locale/$(GETTEXT_PACKAGE).pot

	@$(MAKE) -C locale DESTDIR=$(DESTDIR) install

	@$(MKDIR) \
		$(DESTDIR)$(datarootdir)/$(PRODUCT_NAME)/pot

	@$(INSTALL_DATA) \
		locale/$(GETTEXT_PACKAGE).pot \
		$(DESTDIR)$(datarootdir)/$(PRODUCT_NAME)/pot/$(LIBNAME).pot


doc:
	@$(DOXYGEN) ./doxygen/doxyfile

#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/$(LIBNAME)@EXEEXT@

$(BINDBG)/$(LIBNAME)@EXEEXT@: \
	$(foreach SRC, $(basename $(TEST_SOURCES)), $(OBJDBG)/$(SRC).o) \
	$(BINDBG)/$(SONAME)

	@$(MKDIR) $(dir $@)
	@echo $< ...
	@$(LD) \
		-o $@ \
		$^ \
		-L$(BINDBG) \
		-Wl,-rpath,$(BINDBG) \
		$(LIBS)
 
run: \
	$(BINDBG)/$(LIBNAME)@EXEEXT@

ifeq ($(VALGRIND),no)

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(BINDBG)/$(LIBNAME)@EXEEXT@

else
	@touch valgrind.suppression

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(VALGRIND) --leak-check=full --track-origins=yes --gen-suppressions=all --suppressions=valgrind.suppression \
			$(BINDBG)/$(LIBNAME)@EXEEXT@
endif

$(BINDBG)/$(SONAME): \
	$(foreach SRC, $(basename $(SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(dir $@)
	@echo $< ...
	@$(LD) \
		$(LDFLAGS) \
		-Wl,-soname,$(@F) \
		-o $@ \
		-L$(BINDBG) \
		$^ \
		$(LIBS)


#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)
	@rm -fr $(POTDIR)

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)
	@rm -fr $(POTDIR)

clean: \
	cleanDebug \
	cleanRelease

-include $(foreach SRC, $(basename $(SOURCES)), $(OBJRLS)/$(SRC).d)
-include $(foreach SRC, $(basename $(SOURCES)), $(OBJDBG)/$(SRC).d)



